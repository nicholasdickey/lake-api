{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext","ES2021.String"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }

  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
},
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/google/submitCurrentSitemap.js", "lib/functions/add-article.js", "lib/scripts/add-article.js", "lib/functions/rules/index.js", "lib/functions/rules/main.js", "lib/functions/get-and-parse.js", "lib/functions/dbservice.ts"],
  "exclude": ["node_modules"]
}
